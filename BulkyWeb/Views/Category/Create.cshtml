@model Category


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2"> Tạo thể loại</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">

		<form method="post" class="row">

			<div class="border p-3 ">
				<div class="form-floating py-2 col-12 p-1">
					<label asp-for="Name" class="fw-bold ms-2"></label>
					<input asp-for="Name" class="form-control border-0 shadow" />
				</div>
				<div class="form-floating py-2 col-12 p-1">
					<label asp-for="DisplayOrder" class="fw-bold ms-2"></label>
					<input asp-for="DisplayOrder" class="form-control border-0 shadow" />
				</div>

				<div class="row">
					<div class="col p-3">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6 p-3">
						<a asp-action="Index" asp-controller="Category" class="btn btn-outline-primary border form-control">Back to list</a>
					</div>
				</div>
			</div>

		</form>
		
	</div>
</div>

