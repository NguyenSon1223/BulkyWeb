@page
@model BulkyWeb_Temp.Pages.Categories.IndexModel

<div class="row">
	<div class="col-md-6">
		<h2>Category List</h2>
		<hr/>
	</div>
	<div class="col-md-6">
		<a asp-page="/Categories/Create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i> Create New Category	
		</a>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Display Order</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		
			@foreach (var obj in Model.CategoryList)
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="/Catgories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-page="/Categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash3-fill"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
		
	</tbody>
</table>